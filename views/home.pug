extends layout

block content
  h1 Auto-Checkout Cart
  p.lead Automatic retail checkout system
  hr
  .row
    .col-sm-6
      h2 Account Balance
      if !user
          p Please Login for balance
      else
          p="S$ "+user.profile.balance

     
    form.form-horizontal(action='/account/balance', method='POST')
     input(type='hidden', name='_csrf', value=_csrf) 
     .form-group
       .col-sm-offset-3.col-sm-4
         button.btn.btn-primary(type='submit',autofocus)
           i.fa
           | Refresh